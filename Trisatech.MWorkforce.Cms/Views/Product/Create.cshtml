@model Trisatech.MWorkforce.Cms.ViewModels.ProductViewModel
@using Trisatech.MWorkforce.Cms.Helpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomScripts{
    <script type="text/javascript">
        jQuery(document).ready(function () {
            var errorMessage = '@ViewBag.ErrorMessage';
            if (errorMessage != '') {
                $('#errMessageTxt').text(errorMessage);
                $('#failedDialog').modal('show');
            }
        });
    </script>
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE HEAD -->
    
    
    <!-- END PAGE HEAD -->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index">Product</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="create">Add new product</a>
            <i class="fa fa-circle"></i>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
	<!-- BEGIN PAGE TITLE -->
    <div class="page-head">
        <div class="page-title">
            <h1>Create Product</h1>
        </div>
    </div>
        <!-- END PAGE TITLE -->
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-body form">
                        <form asp-action="create" class="form-horizontal form-row-seperated">
                            <div class="form-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="ProductCode" class="control-label col-md-3"></label>
                                    <div class="col-md-5">
                                        <input asp-for="ProductCode" class="form-control" />
                                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductName" class="control-label col-md-3"></label>
                                    <div class="col-md-5">
                                        <input asp-for="ProductName" class="form-control" />
                                        <span asp-validation-for="ProductName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductModel" class="control-label col-md-3"></label>
                                    <div class="col-md-5">
                                        <input asp-for="ProductModel" type="text" class="form-control" />
                                        <span asp-validation-for="ProductModel" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductPrice" class="control-label col-md-3"></label>
                                    <div class="col-md-5">
                                        <input asp-for="ProductPrice" type="number" class="form-control" />
                                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <a class="btn btn-padd2 grey-cascade" asp-action="index">Cancel</a>
                                        <button type="submit" class="btn btn-padd2 green" style="margin-left: 10px;">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>

