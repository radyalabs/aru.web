
@model Trisatech.MWorkforce.Cms.ViewModels.ContactViewModel
@using Trisatech.MWorkforce.Cms.Helpers
@using Trisatech.MWorkforce.Cms.ViewModels


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyC0ukzaZfEadL4uqMsbMcGJzmKbxaPKffg" type="text/javascript"></script>
    <script src="~/lib/plugins/gmaps/gmaps.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}

@section CustomScripts{
    <script type="text/javascript">
        jQuery(document).ready(function () {
            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage != '') {
                $('#errMessageTxt').text(errorMessage);
                $('#alertModal-error').modal('show');
            }
        });
    </script>
    <script src="~/js/maps-google.js" type="text/javascript"></script>
    <script>
        var baseUrl = '';
        jQuery(document).ready(function () {
            var name = 'ds';
            var lat = '-6.9174639000';
            var longitude = '107.6191228000';

            MapsGoogle.init(name, lat, longitude);
        });
    </script>
}

<div class="page-content">
    <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <!-- Approve Alert -->
    <form asp-action="delete">
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="pos_middle">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-body" style="padding: 20px 25px;">
                            <h4 class="text-center font-grey-gallery" style="font-weight: 600;">Are you sure to delete this ?</h4>
                            <br />
                            <input type="hidden" value="@Model.ContactId" name="id" />
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-block green uppercase" data-backdrop="static" data-keyboard="false">Yes</button>
                                </div>
                                <div class="col-md-6">
                                    <a href="#" class="btn btn-block red uppercase" data-backdrop="static" data-keyboard="false" data-dismiss="modal">No</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
            </div>
            <!-- /.modal-dialog -->
        </div>
    </form>
    <!-- Alert Notify Approved -->
    <div class="modal fade" id="alertModal-error" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="pos_middle">
            <div class="modal-dialog modal-sm modal-notify">
                <div class="modal-content">
                    <div class="modal-body">
                        <center><i class="fa fa-check-circle-o font-green"></i></center>
                        <br />
                        <h4 class="text-center font-grey-gallery" id="errMessageTxt"></h4>
                        <br />
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <button type="submit" class="btn btn-block blue" data-backdrop="static" data-keyboard="false" data-dismiss="modal">Ok</button>
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="#">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="#">Contact</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="#">Contact Info</a>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE HEAD -->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title" style="margin-left: 12px;">
            <h1>Contact Info</h1>
        </div>
        <!-- END PAGE TITLE -->
    </div>
    <!-- END PAGE HEAD -->
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="content-detail">
                <!-- Data User -->
                <div class="portlet light bordered">
                    <div class="portlet-title  text-right">
                        <!-- ACTION BUTTON-->
                        <div class="caption col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn btn-padd2 red" data-backdrop="static" data-keyboard="false" data-dismiss="modal" data-toggle="modal" data-target="#confirmDelete" href="#confirmDelete"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                    <a class="btn btn-padd2 green" asp-action="edit" asp-controller="contact" asp-route-id="@Model.ContactId"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                </div>
                            </div>
                        </div>
                        <!--END ACTION BUTTON-->
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form action="#" class="form-horizontal">
                            <div class="portlet-body form">
                                <div class="form-horizontal form-row-seperated">
                                    <div class="form-body">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Name</label>
                                            <div class="col-md-5">
                                                <label class="control-label" style="color:black;">@Model.ContactName</label>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">customer code</label>
                                            <div class="col-md-5">
                                                <label class="control-label" style="color:black;">@Model.CustomerCode</label>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Email</label>
                                            <div class="col-md-5">
                                                <label class="control-label" style="color:black;">@Model.Email</label>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Phone number</label>
                                            <div class="col-md-5">
                                                <label class="control-label" style="color:black;">@Model.ContactNumber</label>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Photo</label>
                                            <div class="col-md-5">
                                                <label class="control-label" style="color:black;">@Model.ContactPhoto</label>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions text-right">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <a class="btn btn-padd2 grey-cascade" asp-action="index">Back</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
